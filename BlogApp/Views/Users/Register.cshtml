@model RegisterViewModel



<div class="row">
    <div class="col-12">
        <div class="bg-white p-4">

            <h1>Kayıt Ol</h1>  
            <form action="Register" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                <div class="mb-3">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <strong><span class="text-danger" asp-validation-for="UserName"></span></strong>
                </div>







                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <strong><span class="text-danger" asp-validation-for="Name"></span></strong>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <strong><span class="text-danger" asp-validation-for="Email"></span></strong>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <strong><span class="text-danger" asp-validation-for="Password"></span></strong>
                </div>


                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <strong><span asp-validation-for="ConfirmPassword" class="text-danger"></span></strong>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
       
    </div>
</div>